@model E_Commerce20.Models.Producto

@{
    ViewBag.Title = "ProductosMntEdit";
    Layout = "~/Views/Shared/_LayoutCompleto.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="card shadow-lg">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-dark">Actulización de Productos</h6>
        </div>
        <div class="card-body">
            <form class="user">
                @{
                    if (!string.IsNullOrEmpty(ViewBag.mensaje))
                    {
                        <div class="alert alert-success">@ViewBag.mensaje</div>
                    }
                }

                        <div class="form-group row">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.idProducto, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.idProducto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.nomProducto, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.nomProducto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nomProducto, "", new { @class = "text-danger" })
                            </div>   
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.idCategoria, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.DropDownList("idCategoria", (SelectList)ViewBag.categorias, new { @class = "form-control" })
                            </div>


                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.idProveedor, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.DropDownList("idProveedor", (SelectList)ViewBag.proveedores, new { @class = "form-control" })
                            </div>


                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.precioUnidad, htmlAttributes: new { @class = "control-label col-md-10" })
                                @Html.EditorFor(model => model.precioUnidad, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                                @Html.ValidationMessageFor(model => model.precioUnidad, "", new { @class = "text-danger" })
                            </div>



                            <div class="col-sm-4">
                                @Html.LabelFor(model => model.stockProducto, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.stockProducto, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                                @Html.ValidationMessageFor(model => model.stockProducto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success btn-user btn-block" />
                </div>


            </form>
        </div>
    </div>
}

<br />
<a href="@Url.Action("ProductosMntIndex", "ProductosMnt")" class="btn btn-light btn-icon-split">
    <span class="icon text-dark">
        <i class="fas fa-angle-double-left "></i>
    </span>
    <span class="text">Regresar al Listado</span>
</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


