@model IEnumerable<E_Commerce20.Models.Ciudades>

@{
    ViewBag.Title = "CiudadesMntIndex";
    Layout = "~/Views/Shared/_LayoutCompleto.cshtml";
}

<br />
<div class="card shadow-lg">
    <div class="card-header">
        <h3 class="m-0 font-weight-bold text-dark">Listado de Ciudades</h3>
        <br />
        <a href="@Url.Action("CiudadesMntCreate", "CiudadesMnt")" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Agregar Ciudad</span>
        </a>

    </div>
    <div class="card-body">

        <table class="table table-striped">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id_ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_ciudad)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id_ciudad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_ciudad)
                </td>
                <td>
                    <a href="@Url.Action("CiudadesMntEdit", "CiudadesMnt", new { id = item.id_ciudad })" class="btn btn-success btn-circle">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>

            }

        </table>
    </div>

</div>





