@model E_Commerce20.Models.Clientes

@{
    ViewBag.Title = "ClientesMntCreate";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <hr />
    @{
        if (!string.IsNullOrEmpty(ViewBag.mensaje))
        {
            <div class="alert alert-success">@ViewBag.mensaje</div>
        }
    }


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">
                                Formulario de registro
                            </h1>
                        </div>
                        <form class="user">

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.EditorFor(model => model.NombreCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Nombre" } })
                                    @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6">
                                    @Html.EditorFor(model => model.ApellidosCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Apellido" } })
                                    @Html.ValidationMessageFor(model => model.ApellidosCliente, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.CorreoCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.CorreoCliente, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                @Html.EditorFor(model => model.DniCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "DNI" } })
                                @Html.ValidationMessageFor(model => model.DniCliente, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.EditorFor(model => model.DireccionCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Dirección" } })
                                @Html.ValidationMessageFor(model => model.DireccionCliente, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.DropDownList("id_ciudad", (SelectList)ViewBag.ciudades, "Ciudad", new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                @Html.EditorFor(model => model.TelefonoCliente, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Teléfono" } })
                                @Html.ValidationMessageFor(model => model.TelefonoCliente, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.EditorFor(model => model.PasswordCliente, new { @id = "password", htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Contraseña" } })
                                    @Html.ValidationMessageFor(model => model.PasswordCliente, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6">
                                    @Html.EditorFor(model => model.PasswordClienteConfirmacion, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Repetir Contraseña" } })
                                    @Html.ValidationMessageFor(model => model.PasswordClienteConfirmacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Registrar" class="btn btn-primary btn-user btn-block" />
                            </div>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="~/Home/">¿Ya tienes una cuenta? Inicia Sesión</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

