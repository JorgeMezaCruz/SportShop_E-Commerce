<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SportShop-Mantenimiento</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>


<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("ProductosMntIndex", "ProductosMnt")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="sidebar-brand-text mx-3">SportShop</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Divider -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseProveedores" aria-expanded="true" aria-controls="collapseProveedores">
                    <i class="fas fa-fw fa-truck"></i>
                    <span>Proveedores</span>
                </a>
                <div id="collapseProveedores" class="collapse" aria-labelledby="headingProveedores" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("ProveedoresMntIndex", "ProveedoresMnt")" class="collapse-item">
                            Listado de Proveedores
                        </a>
                        <a href="@Url.Action("ProveedoresMntCreate", "ProveedoresMnt")" class="collapse-item">
                            Registrar Proveedores
                        </a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseCategorias" aria-expanded="true" aria-controls="collapseCategorias">
                    <i class="fas fa-fw fa-th-list"></i>
                    <span>Categorias</span>
                </a>
                <div id="collapseCategorias" class="collapse" aria-labelledby="headingCategorias" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("CategoriasMntIndex", "CategoriasMnt")" class="collapse-item">
                            Listado de Categorias
                        </a>
                        <a href="@Url.Action("CategoriasMntCreate", "CategoriasMnt")" class="collapse-item">
                            Registrar Categorias
                        </a>
                    </div>
                </div>
            </li>



            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseProductos" aria-expanded="true" aria-controls="collapseProductos">
                    <i class="fas fa-fw fa-shopping-bag"></i>
                    <span>Productos</span>
                </a>
                <div id="collapseProductos" class="collapse" aria-labelledby="headingProductos" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("ProductosMntIndex", "ProductosMnt")" class="collapse-item">
                            Listado de Productos
                        </a>
                        <a href="@Url.Action("ProductosMntCreate", "ProductosMnt")" class="collapse-item">
                            Registrar Productos
                        </a>
                        <a href="@Url.Action("ProductosReporte", "ProductosMnt")" class="collapse-item">
                            Busqueda de Producto
                        </a>

                    </div>
                </div>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseCiudades" aria-expanded="true" aria-controls="collapseCiudades">
                    <i class="fas fa-fw fa-globe"></i>
                    <span>Ciudades</span>
                </a>
                <div id="collapseCiudades" class="collapse" aria-labelledby="headingCiudades" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("CiudadesMntIndex", "CiudadesMnt")" class="collapse-item">
                            Listado de Ciudades
                        </a>
                        <a href="@Url.Action("CiudadesMntCreate", "CiudadesMnt")" class="collapse-item">
                            Registrar Ciudades
                        </a>
                    </div>
                </div>
            </li>



            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseClientes" aria-expanded="true" aria-controls="collapseClientes">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Clientes</span>
                </a>
                <div id="collapseClientes" class="collapse" aria-labelledby="headingClientes" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("ClientesMntIndex", "ClientesMnt")" class="collapse-item">
                            Listado de Clientes
                        </a>
                    </div>
                </div>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseTrabajadores" aria-expanded="true" aria-controls="collapseTrabajadores">
                    <i class="fas fa-fw  fa-briefcase"></i>
                    <span>Trabajadores</span>
                </a>
                <div id="collapseTrabajadores" class="collapse" aria-labelledby="headingTrabajadores" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("TrabajadoresMntIndex", "TrabajadoresMnt")" class="collapse-item">
                            Listado de Trabajadores
                        </a>
                        <a href="@Url.Action("TrabajadoresMntCreate", "TrabajadoresMnt")" class="collapse-item">
                            Registrar Trabajador
                        </a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseReporte" aria-expanded="true" aria-controls="collapseReporte">
                    <i class="fas fa-fw fa-globe"></i>
                    <span>Reporte</span>
                </a>
                <div id="collapseReporte" class="collapse" aria-labelledby="headingReporte" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a href="@Url.Action("PedidosYear", "Carrito")" class="collapse-item">
                            Pedidos por Año
                        </a>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Divider -->
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Logout">
                        <i class="fa fa-power-off" aria-hidden="true"></i>
                        <span>Cerrar Sesion</span>

                    </a>
                </li>
            }


            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>


        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="~/Content/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/Content/js/sb-admin-2.js"></script>
        @RenderSection("scripts", required: false)

    </div>
</body>
</html>

