@model E_Commerce20.Models.Categorias

@{
    ViewBag.Title = "CategoriasMntEdit";
    Layout = "~/Views/Shared/_LayoutCompleto.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="card shadow-lg">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-dark">Actualizar datos de categoria</h6>
        </div>
        <div class="card-body">
            <form class="user">
                @{
                    if (!string.IsNullOrEmpty(ViewBag.mensaje))
                    {
                        <div class="alert alert-success">@ViewBag.mensaje</div>
                    }
                }

                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        @Html.LabelFor(model => model.idCategoria, htmlAttributes: new { @class = "control-label col-md-6" })
                        @Html.EditorFor(model => model.idCategoria, new { htmlAttributes = new { @class = "form-control form-control-user", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.nombreCategoria, htmlAttributes: new { @class = "control-label col-md-6" })
                        @Html.EditorFor(model => model.nombreCategoria, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Nombre de Categoria" } })
                        @Html.ValidationMessageFor(model => model.nombreCategoria, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success btn-user btn-block" />
                </div>


            </form>
        </div>
    </div>
}

<br />
<a href="@Url.Action("CategoriasMntIndex", "CategoriasMnt")" class="btn btn-light btn-icon-split">
    <span class="icon text-dark">
        <i class="fas fa-angle-double-left "></i>
    </span>
    <span class="text">Regresar al Listado</span>
</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
